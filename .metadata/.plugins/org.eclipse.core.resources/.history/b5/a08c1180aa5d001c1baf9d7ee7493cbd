package fr.dawan.exercices;

import java.util.Scanner;

public class Exercice12 {

	public static void main(String[] args) {
		Scanner clavier = new Scanner(System.in);
		
		String x = "";
		
		System.out.println("Veuillez renseigner une lettre");
		x = clavier.nextLine();
		
		if (x.length() > 1 || x.length() < 0) {
			System.out.println("Vous ne devez rentrer qu'un seul caractère");
		}else if ( "x" == "a" || x == "e" || x == "i" || x =="o" || x =="u" || x == "y") {
			System.out.println("La lettre est une voyelle");
		} else {System.out.println("C'est une consonne");};
		
}
		
		
		
	}


