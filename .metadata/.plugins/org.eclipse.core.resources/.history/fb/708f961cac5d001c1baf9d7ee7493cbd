package fr.dawan.exercices;

import java.util.Scanner;

public class Exercice9 {

	public static void main(String[] args) {
		
		Scanner clavier = new Scanner(System.in);
		
		int year = 0;
		
		System.out.println("Veuillez entrer une année pour vérifier si elle est bissextile : ");

		year = clavier.nextInt();
		if ((year/4) % 1 == 0 && (year/100)% 1 == 0 && (year/400)% 1 == 0) {
		System.out.println("L'année est bissextile ");	
		} else { System.out.println("L'année n'est pas bissextile !");}
	}

}
