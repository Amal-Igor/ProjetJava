package fr.dawan.tableaux.tableauxstatiques;

import java.util.Scanner;

public class TableauUtilite {

	/*
	 * Nous verront ici les tableaux statiques et dynamiques
	 * - Un tableau statique a une taille fixe. On ne peut pas la modifier une fois déclarer
	 * - A l'inverse les tableaux dynamiques => nous pouvons augmenter sa taille
	 * 		Ces tableaux ne peuvent que retenir ses référénces vers des objets
	 * 
	 * L'alternative aux tableaux statiques, sont les tableaux dynamiques 
	 */
	public static void main(String[] args) {
		Scanner clavier = new Scanner(System.in);
		int age1, age2;
		
		double moyenne;
		
		System.out.println("Entrez l'age de l'utilisateur 1 : ");
		age1 = clavier.nextInt();
		
		System.out.println("Entrez l'age de l'utilisateur 2 : ");
		age2 = clavier.nextInt();
		
		moyenne = (age1 + age2) / 2;
		System.out.println("La moyenne de l'age est de : "  + moyenne);
		
		int age[] = new int[27];
		for(int i = 0; i <= 27; i++) {
			System.out.println(age[i]);
		}
	}

}
